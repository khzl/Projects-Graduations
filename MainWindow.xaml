<Window x:Class="DragonOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragonOCR"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DragonOCR" 
        Height="272"
        Width="534"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded">

    <Grid 
        Background="#91ADFA">

        <materialDesign:Card
            Background="#807361"
            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
            Padding="8"
            UniformCornerRadius="6" 
            Margin="10,57,173,64">

            <TextBox x:Name="_text" 
                     HorizontalAlignment="Left" 
                     Height="134"
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top"
                     Width="336"
                     Margin="0,0,-1,0"
                     CaretBrush="{x:Null}" 
                     SelectionBrush="{x:Null}"/>
        </materialDesign:Card>


        <Grid HorizontalAlignment="Left"
              Height="23"
              VerticalAlignment="Top"
              Width="534"
              Background="#58617A"
              MouseDown="Grid_MouseDown">

            <Image VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="2,0,509,0"
                   Height="23"
                   Width="23"
                   StretchDirection="DownOnly"
                   Stretch="Fill"
                   RenderTransformOrigin="0.464,0.25"
                   Source="OCR.png" >
            </Image>

            <TextBlock HorizontalAlignment="Left"
                       Height="19"
                       Margin="30,2,0,0"
                       TextWrapping="Wrap"
                       Text="OCR"
                       VerticalAlignment="Top"
                       Width="171"
                       Foreground="#9EC7FA"
                       FontWeight="Bold"/>

            <Button Height="Auto"
                    Margin="493,4,5,6"
                    Background="#FFD63031"
                    BorderBrush="#FF2D3436"
                    FontSize="7"
                    ToolTip="Close"
                    Click="_close"/>

            <Button
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                ToolTip="Minimize"
                Height="Auto"
                Margin="450,4,46,6"
                Background="#FF2D3436"
                BorderBrush="#FF2D3436"
                Click="_minimize"/>

        </Grid>

        <materialDesign:Card
            Background="#517A77"
            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
            Padding="8"
            UniformCornerRadius="6"
            Margin="366,57,10,64">

            <Button Content="Snipping Tool"
                    HorizontalAlignment="Left"
                    Height="26"
                    VerticalAlignment="Top"
                    Width="148"
                    Background="#58687A"
                    BorderBrush="#FFBAEFA2"
                    Foreground="White"
                    Click="Button_Click_1"/>

        </materialDesign:Card>

        <ToggleButton x:Name="_googlecheck"
                      Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                      ToolTip="Đang bật"
                      IsChecked="False"
                      Margin="485,130,18,128" />

        <TextBlock HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Text="Google after scan"
                   VerticalAlignment="Center"
                   Margin="378,0,0,0"
                   Foreground="White"/>

        <TextBlock HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Text="Copy after scan"
                   VerticalAlignment="Top"
                   Margin="378,153,0,0"
                   Foreground="White"/>

        <ToggleButton x:Name="_copycheck"
                      Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                      ToolTip="MaterialDesignSwitchDarkToggleButton"
                      IsChecked="false"
                      Margin="485,160,18,98" />

        <TextBlock HorizontalAlignment="Left" 
                   TextWrapping="Wrap"
                   Text="API-key:"
                   VerticalAlignment="Top"
                   Margin="373,178,0,0"
                   Foreground="White"
                   Width="46"/>


        <ComboBox x:Name="_ocrlang"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Width="136"
                  Margin="119,26,0,0"
                  Height="31"
                  Foreground="White"
                  Background="#46647F"
                  BorderBrush="#727A52"
                  OpacityMask="#FFFF1818">

            <ComboBoxItem IsSelected="True">Arabic</ComboBoxItem>
            <ComboBoxItem>Arabic</ComboBoxItem>
            <ComboBoxItem>English</ComboBoxItem>

        </ComboBox>

        <TextBlock HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Text="OCR Language:"
                   VerticalAlignment="Top"
                   Margin="14,30,0,0"
                   Foreground="Black"
                   Width="100"
                   FontSize="14"/>



        <materialDesign:Card
            Background="#FF636E72"
            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
            Padding="8"
            UniformCornerRadius="6"
            Margin="10,213,10,10">

            <Label Content="Status: "
                   HorizontalAlignment="Left"
                   Margin="10,3,0,0" 
                   VerticalAlignment="Top"
                   Height="27"
                   Foreground="White"
                   FontSize="14"/>

        </materialDesign:Card>

        <Label x:Name="_trangthai"
               Content="Ready to start !!"
               HorizontalAlignment="Left"
               Margin="87,224,0,0"
               VerticalAlignment="Top"
               Height="27"
               Foreground="#DD0CFF00"
               FontSize="14"
               Width="385"/>

        <ProgressBar x:Name="_process"
                     Style="{DynamicResource MaterialDesignCircularProgressBar}"
                     HorizontalAlignment="Center"
                     Margin="485,224,18,17"
                     IsIndeterminate="True"
                     Value="0"
                     Height="Auto"
                     Width="31"
                     Foreground="#1BF52B" />

        <Button x:Name="_copybt"
                Content="Copy"
                HorizontalAlignment="Left"
                Height="26" 
                Margin="295,26,0,0"
                VerticalAlignment="Top"
                Width="66"
                Background="#7A3E3A"
                BorderBrush="#FFBAEFA2"
                Foreground="White"
                Click="_copybt_Click"/>

        <TextBox x:Name="_apikey"
                 ToolTip="Get free API-key from OCR.SPACE"
                 HorizontalAlignment="Left" 
                 Height="23"
                 Margin="429,174,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="87"
                 Foreground="White"
                 Text="hello"/>

        <Button x:Name="_UploadButton"
                Content="UploadImage"
                HorizontalAlignment="Left"
                Height="26"
                Margin="376,97,0,0"
                VerticalAlignment="Top"
                Width="138"
                Click="_UploadImageButton_Click"/>

        <Image x:Name="_UploadImage"
               VerticalAlignment="Top"
               Margin="6,287,4,0"
               Height="139"
               Stretch="Uniform"/>
        
    </Grid>
</Window>
